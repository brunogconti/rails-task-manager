<h1>Edit Task</h1>

<div class="d-flex flex-column">
  <%= simple_form_for(@task) do |f| %>
    <%= f.input :title %>
    <%= f.input :details %>
    <%= f.input :completed %>
    <%= f.submit %>
  <% end %>

<p class="mt-3"><%= link_to "Go back to tasks", tasks_path %></p>
<p><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
</p>
</div>
