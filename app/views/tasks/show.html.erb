<div class="p-3">
<h1><%=@task.title%></h1>
<p><%= link_to "Edit this task", task_edit_path(@task) %></p>
</div>
<div class="p-3 bg-light text-dark bg-opacity-25"><p><%=@task.details%></p></div>
<div class="p-3"><p>
<%if @task.completed%>
<%="❌ This task is not completed yet"%>
<%else%>
<%="✅ This task is completed!"%>
<%end%>
</p>

<p><%= link_to "Go back to tasks", tasks_path %></p>
<p><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
</p>
</div>
